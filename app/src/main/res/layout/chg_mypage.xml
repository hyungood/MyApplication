<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout android:background="#ffffff" android:orientation="vertical" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.Toolbar android:background="@drawable/toolbar_background" android:layout_height="70dp" android:layout_width="match_parent" android:theme="@style/ThemeOverlay.AppCompat.ActionBar" android:elevation="4dp" android:id="@+id/change_toolbar"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="아이디" android:lineSpacingExtra="0sp" android:textColor="#000" android:textSize="15sp" android:layout_marginLeft="30dp" android:layout_marginTop="30dp"/>

    <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/Id" android:lineSpacingExtra="17sp" android:textColor="#000" android:textSize="15sp" android:layout_gravity="center_horizontal" android:inputType="textPersonName" android:ems="10" android:layout_marginHorizontal="28dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="비밀번호" android:lineSpacingExtra="0sp" android:textColor="#000" android:textSize="15sp" android:layout_marginLeft="30dp" android:layout_marginTop="20dp"/>

    <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/Pw" android:lineSpacingExtra="17sp" android:textColor="#000" android:textSize="15sp" android:layout_gravity="center_horizontal" android:inputType="textPassword" android:ems="10" android:layout_marginHorizontal="28dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="이름" android:lineSpacingExtra="0sp" android:textColor="#000" android:textSize="15sp" android:layout_marginLeft="30dp" android:layout_marginTop="40dp"/>

    <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/Name" android:lineSpacingExtra="17sp" android:textColor="#000" android:textSize="15sp" android:layout_gravity="center_horizontal" android:inputType="textPersonName" android:ems="10" android:layout_marginHorizontal="28dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="핸드폰 번호" android:lineSpacingExtra="0sp" android:textColor="#000" android:textSize="15sp" android:layout_marginLeft="30dp" android:layout_marginTop="20dp"/>

    <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/Phone" android:lineSpacingExtra="17sp" android:textColor="#000" android:textSize="15sp" android:layout_gravity="center_horizontal" android:inputType="number" android:ems="10" android:layout_marginHorizontal="28dp"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="생일" android:lineSpacingExtra="0sp" android:textColor="#000" android:textSize="15sp" android:layout_marginLeft="30dp" android:layout_marginTop="20dp"/>

    <EditText android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/Bir" android:lineSpacingExtra="17sp" android:textColor="#000" android:textSize="15sp" android:layout_gravity="center_horizontal" android:inputType="date" android:ems="10" android:layout_marginHorizontal="28dp"/>

    <Button android:background="@drawable/button_selector" android:layout_height="50dp" android:layout_width="match_parent" android:id="@+id/button_chg" android:text="수정 완료" android:lineSpacingExtra="31sp" android:textColor="@color/text_selector" android:textSize="18sp" android:layout_marginTop="55dp" android:layout_marginHorizontal="30dp" android:onClick="onClick"/>

</LinearLayout>