<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background = "#ffffff"
    android:label="@string/app_name">

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#ffffff"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/contract"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginLeft="50dp"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/certificate" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:inputType="textPersonName"
                android:lineSpacingExtra="2sp"
                android:gravity="center"
                android:text="약속하기"
                android:textColor="#000000"
                android:textSize="20dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">


            <ImageButton
            android:id="@+id/gallery"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/picture" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:lineSpacingExtra="2sp"
            android:inputType="textPersonName"
            android:text="사진 업로드" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.ContentFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@drawable/background"></LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            android:orientation="vertical"
            android:layout_gravity="top|left">

            <ImageButton
                android:id="@+id/puzzle"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="right"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/jigsaw" />

            <TextView
                android:id="@+id/puzzle_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textColor="#000000"
                android:lineSpacingExtra="2sp"
                android:layout_gravity="center"
                android:inputType="textPersonName"
                android:text="퍼즐게임" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="50dp"
            android:orientation="vertical"
            android:layout_gravity="right|top">

            <ImageButton
                android:id="@+id/tetris"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/tetris" />

            <TextView
                android:id="@+id/tetris_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textColor="#000000"
                android:lineSpacingExtra="2sp"
                android:layout_gravity="center"
                android:inputType="textPersonName"
                android:text="테트리스 게임" />
        </LinearLayout>

        <!--android:scaleType="fitCenter”-->
        <!--setScaleType(ImageView.ScaleType.FIT_CENTER);-->


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical"
            android:layout_gravity="bottom|left">

            <ImageButton
                android:id="@+id/matching"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/matching" />

            <TextView
                android:id="@+id/matching_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:inputType="textPersonName"
                android:lineSpacingExtra="2sp"
                android:text="모양 맞추기"
                android:textColor="#000000"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical"
            android:layout_gravity="bottom|right">

            <ImageButton
                android:id="@+id/ordering"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ordering" />

            <TextView
                android:id="@+id/ordering_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop = "10dp"
                android:layout_gravity="center"
                android:inputType="textPersonName"
                android:lineSpacingExtra="2sp"
                android:text="숫자 게임"
                android:textColor="#000000"
                android:textSize="20dp" />
        </LinearLayout>

    </android.support.v7.widget.ContentFrameLayout>


</LinearLayout>